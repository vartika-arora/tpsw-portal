<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%= csrf_meta_tag %>

<div class="container"> <!-- main container-->

  <div class="row" >     <!-- companies cards-->
    <% @companies.each do |company| %>
      <div class="col s12 m12 l4">
        <nav>
          <span style="font-size: 20px;" class="brand-logo"><%= company.name %></span>
        </nav>
        <div class="card">
          <div class="card-content" >

            <h6><%= company.offer %></h6>
            <blockquote><%= company.description %></blockquote>
            <h6><b>Eligible Departments</b></h6>
            <%= company.departments %>
            <span style="margin-top: 10%;" class="card-title activator">Apply<i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title">FORM<i class="material-icons right">close</i></span>
              <div>
                <!-- <p id="flash_<%=company[:id_name]%>"></p> -->
              </div>
              <!-- <input placeholder="15/IT/XX" id="roll_<%=company[:id_name]%>" type="text"> -->
              <input placeholder="15/IT/XX" type="text">
              <!-- <%= hidden_field_tag(:company, "#{company[:name]}") %> -->
              <!-- <a class="waves-effect waves-light btn" id="<%=company[:id_name] %>" >Submit</a> -->
              <a class="waves-effect waves-light btn">Submit</a>

          </div>
        </div>
      </div>
      <script>
      $(document).ready(function(){
          $("#<%= company[:id_name] %>").click(function(){
              var roll = $("#roll_<%=company[:id_name]%>").val()
              var company = "<%= company[:id_name]%>"
              var token = $('meta[name=csrf-token]').attr('content');
              submit_f(roll,company,token);

          });
      });
      </script>
    <% end %>
  </div>
</div>
